{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "_artifactsLocation": {
      "type": "string"
    },
    "_artifactsLocationSasToken": {
      "type": "string"
    },
    "automationAccountName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "compileName": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "dcmattygstorage"
    },
    "storageAccountKey": {
      "type": "string",
      "defaultValue":"nYeZqUef4SHXQ27h3Vl34Ol+2TnSyDYVGODhR0HQrGh+GPhQsPRUqEwUaELSo+12g03aaWcNSKR+u6FCTHV36g=="
    },
    "fileShareName": {
      "type": "string",
      "defaultValue": "dcmattyg"
    }
  },
  "variables": {
    "dscConfigurations": {
      "NginxWebServerConfig": {
        "name": "linuxconfig",
        "compileName": "[guid('AzureAutomationCompile', 'linuxconfig')]",
        "description": "Nginx web server install and configuration",
        "scriptLocation": "[concat(parameters('_artifactsLocation'), 'dsc/nginxWebServer.ps1', parameters('_artifactsLocationSasToken'))]"
      },
      "IISWebServerConfig": {
        "name": "windowsconfig",
        "compileName": "[guid('AzureAutomationCompile', 'windowsconfig')]",
        "description": "IIS web server install and configuration",
        "scriptLocation": "[concat(parameters('_artifactsLocation'), 'dsc/iisWebServer.ps1', parameters('_artifactsLocationSasToken'))]"
      }
    },
    "dscResources": {
      "nx": {
        "name": "nx",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/nx.1.0.0.nupkg"
      },
      "nxNetworking": {
        "name": "nxNetworking",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/nxnetworking.1.1.0.nupkg"
      },
      "xWebAdministraton": {
        "name": "xWebAdministration",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/xwebadministration.3.1.1.nupkg"
      },
      "xPSDesiredStateConfiguration": {
        "name": "xPSDesiredStateConfiguration",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/xpsdesiredstateconfiguration.9.1.0.nupkg"
      },
      "xPhp": {
        "name": "xPhp",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/xphp.1.2.0.nupkg"
      }
    }
  },
  "resources": [
    {
      "name": "[parameters('automationAccountName')]",
      "type": "Microsoft.Automation/automationAccounts",
      "apiversion": "2018-01-15",
      "location": "[parameters('location')]",
      "comments": "Automation account",
      "properties": {
        "sku": {
          "name": "Basic"
        }
      },
      "resources": [
        {
          "name": "[variables('dscResources').nx.name]",
          "type": "modules",
          "apiVersion": "2018-01-15",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[parameters('automationAccountName')]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('dscResources').nx.url]"
            }
          }
        },
        {
          "name": "[variables('dscResources').nxNetworking.name]",
          "type": "modules",
          "apiVersion": "2018-01-15",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[parameters('AutomationAccountName')]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('dscResources').nxNetworking.url]"
            }
          }
        },
        {
          "name": "[variables('dscResources').xWebAdministraton.name]",
          "type": "modules",
          "apiVersion": "2018-01-15",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[parameters('AutomationAccountName')]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('dscResources').xWebAdministraton.url]"
            }
          }
        },
        {
          "name": "[variables('dscResources').xPSDesiredStateConfiguration.name]",
          "type": "modules",
          "apiVersion": "2018-01-15",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[parameters('AutomationAccountName')]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('dscResources').xPSDesiredStateConfiguration.url]"
            }
          }
        },
        {
          "name": "[variables('dscResources').xPhp.name]",
          "type": "modules",
          "apiVersion": "2018-01-15",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[parameters('AutomationAccountName')]",
            "[variables('dscResources').xWebAdministraton.name]",
            "[variables('dscResources').xPSDesiredStateConfiguration.name]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('dscResources').xPhp.url]"
            }
          }
        },
        {
          "name": "[variables('dscConfigurations').NginxWebServerConfig.name]",
          "type": "configurations",
          "apiVersion": "2018-01-15",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[parameters('AutomationAccountName')]",
            "[variables('dscResources').nx.name]",
            "[variables('dscResources').nxNetworking.name]"
          ],
          "properties": {
            "state": "Published",
            "overwrite": "true",
            "source": {
              "type": "uri",
              "value": "[variables('dscConfigurations').NginxWebServerConfig.scriptLocation]"
            }
          }
        },
        {
          "name": "[variables('dscConfigurations').IISWebServerConfig.name]",
          "type": "configurations",
          "apiVersion": "2018-01-15",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[parameters('AutomationAccountName')]",
            "[variables('dscResources').xWebAdministraton.name]",
            "[variables('dscResources').xPSDesiredStateConfiguration.name]",
            "[variables('dscResources').xPhp.name]"
          ],
          "properties": {
            "state": "Published",
            "overwrite": "true",
            "source": {
              "type": "uri",
              "value": "[variables('dscConfigurations').IISWebServerConfig.scriptLocation]"
            }
          }
        },
        {
          "name": "[variables('dscConfigurations').NginxWebServerConfig.compileName]",
          "type": "compilationjobs",
          "apiVersion": "2018-01-15",
          "tags": {},
          "dependsOn": [
            "[parameters('AutomationAccountName')]",
            "[variables('dscConfigurations').NginxWebServerConfig.name]"
          ],
          "properties": {
            "configuration": {
              "name": "[variables('dscConfigurations').NginxWebServerConfig.name]"
            },
            "parameters": {
              "storageAccountName": "[parameters('storageAccountName')]",
              "storageAccountKey": "[parameters('storageAccountKey')]",
              "fileShareName": "[parameters('fileShareName')]"
            }
          }
        },
        {
          "name": "[variables('dscConfigurations').IISWebServerConfig.compileName]",
          "type": "compilationjobs",
          "apiVersion": "2018-01-15",
          "tags": {},
          "dependsOn": [
            "[parameters('AutomationAccountName')]",
            "[variables('dscConfigurations').IISWebServerConfig.name]"
          ],
          "properties": {
            "configuration": {
              "name": "[variables('dscConfigurations').IISWebServerConfig.name]"
            },
            "parameters": {
              // "storageAccountName": "[parameters('storageAccountName')]",
              // "storageAccountKey": "[parameters('storageAccountKey')]",
              // "fileShareName": "[parameters('fileShareName')]"
            }
          }
        }
      ]
    }
  ],
  "outputs": {}
}
