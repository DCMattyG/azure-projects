{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "value": "westus"
    },
    "_artifactsLocation":{
      "value": "https://raw.githubusercontent.com/DCMattyG/azure-projects/master/deploy-all/"
    },
    "_artifactsLocationSasToken": {
      "value": ""
    },
    "mgmtRg": {
      "value": "mgmt-rg"
    },
    "networkRg": {
      "value": "network-rg"
    },
    "windowsRg": {
      "value": "windows-rg"
    },
    "linuxRg": {
      "value": "linux-rg"
    },
    "fileShareName": {
      "value": "website"
    },
    "zipFileRepo": {
      "value": "https://github.com/DCMattyG/azure-projects"
    },
    "zipFilePath": {
      "value": "/azure-projects/storage-file-share/data/linuxWebsite.zip"
    },
    "hubNetwork": {
      "value": {
        "vnetName": "hub-vnet",
        "addressSpace": "10.0.0.0/27",
        "gwSubnet": "GatewaySubnet",
        "gwPrefix": "10.0.0.0/27"
      }
    },
    "virtualNetworks": {
      "value": [
        {
          "vnetName": "lin-vm-vnet",
          "addressSpace": "10.1.0.0/16",
          "subnets": [
            {
              "subnetName": "default",
              "addressPrefix": "10.1.0.0/24",
              "routeTable": "linux-routes"
            }
          ]
        },
        {
          "vnetName": "win-vm-vnet",
          "addressSpace": "10.2.0.0/16",
          "subnets": [
            {
              "subnetName": "default",
              "addressPrefix": "10.2.0.0/24",
              "routeTable": "windows-routes"
            }
          ]
        }
      ]
    },
    "routeTables": {
      "value": [
        {
          "name": "linux-routes",
          "routes": [
            {
              "name": "route-to-windows",
              "properties": {
                "addressPrefix": "10.2.0.0/16",
                "nextHopType": "VirtualNetworkGateway"
              }
            }
          ]
        },
        {
          "name": "windows-routes",
          "routes": [
            {
              "name": "route-to-linux",
              "properties": {
                "addressPrefix": "10.1.0.0/16",
                "nextHopType": "VirtualNetworkGateway"
              }
            }
          ]
        }
      ]
    },
    "vnetPeers": {
      "value": [
        {
          "name": "hub-to-linux",
          "from": "hub-vnet",
          "to": "lin-vm-vnet",
          "vnetAccess": true,
          "forwardedTraffic": true,
          "gatewayTransit": true,
          "remoteGateways": false
        },
        {
          "name": "linux-to-hub",
          "from": "lin-vm-vnet",
          "to": "hub-vnet",
          "vnetAccess": true,
          "forwardedTraffic": true,
          "gatewayTransit": false,
          "remoteGateways": true
        },
        {
          "name": "hub-to-windows",
          "from": "hub-vnet",
          "to": "win-vm-vnet",
          "vnetAccess": true,
          "forwardedTraffic": true,
          "gatewayTransit": true,
          "remoteGateways": false
        },
        {
          "name": "windows-to-hub",
          "from": "win-vm-vnet",
          "to": "hub-vnet",
          "vnetAccess": true,
          "forwardedTraffic": true,
          "gatewayTransit": false,
          "remoteGateways": true
        }
      ]
    },
    "vmssParams": {
      "value": {
        "appName": "vmss-windows-test",
        "resourceGroup": "windows-rg",
        "virtualNetwork": "win-vm-net",
        "dscConfig": "windowsconfig.IISWebServer",
        "vmssConfig": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2016-Datacenter",
            "version": "latest"
          },
          "instanceSize": "Standard_D2s_v3",
          "instanceCount": 3,
          "upgradePolicy": "Automatic",
          "singlePlacementGroup": true,
          "osDiskType": "Premium_LRS",
          "priority": "Regular",
          "platformFaultDomainCount": 5,
          "scaleInPolicy": {
            "rules": [
              "Default"
            ]
          }
        }
      }
    }
  }
}
