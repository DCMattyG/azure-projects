{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "appName": {
      "type": "string"
    }
  },
  "variables": {
    "backendPoolName": "backend-pool",
    "loadBalancerName": "[concat(parameters('appName'), '-lb')]",
    "publicIpAddressName": "[concat(parameters('appName'), '-ip')]",
    "loadBalancerId": "[resourceId('Microsoft.Network/loadBalancers', variables('loadBalancerName'))]",
    "backendPoolId": "[concat(variables('loadBalancerId'), '/backendAddressPools/', variables('backendPoolName'))]",
    "frontEndIpId": "[concat(variables('loadBalancerId'), '/frontendIPConfigurations/loadBalancerFrontEnd')]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/loadBalancers",
      "name": "[variables('loadBalancerName')]",
      "location": "[parameters('location')]",
      "apiVersion": "2019-06-01",
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "LoadBalancerFrontEnd",
            "properties": {
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIpAddressName'))]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "id": "[variables('backendPoolId')]",
            "name": "[variables('backendPoolName')]"
          }
        ],
        "inboundNatPools": [
          {
            "name": "natpool",
            "properties": {
              "frontendIPConfiguration": {
                  "id": "[variables('frontEndIpId')]"
              },
              "protocol": "tcp",
              "frontendPortRangeStart": 50000,
              "frontendPortRangeEnd": 50119,
              "backendPort": 22
            }
          }
        ],
        "probes": [
          {
            "name": "tcpProbe",
            "properties": {
              "protocol": "tcp",
              "port": 80,
              "intervalInSeconds": 5,
              "numberOfProbes": 2,
              "loadBalancingRules": []
            }
          }
        ],
        "loadBalancingRules": [
          {
            "name": "LBRule",
            "properties": {
              "frontendIPConfiguration": {
                  "id": "[resourceId('Microsoft.Network/loadBalancers/frontendIPConfigurations', variables('loadBalancerName'), 'loadBalancerFrontEnd')]"
              },
              "backendAddressPool": {
                  "id": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', variables('loadBalancerName'), variables('backendPoolName'))]"
              },
              "protocol": "tcp",
              "frontendPort": 80,
              "backendPort": 80,
              "enableFloatingIP": false,
              "idleTimeoutInMinutes": 5,
              "loadDistribution": "Default",
              "probe": {
                "id": "[resourceId('Microsoft.Network/loadBalancers/probes', variables('loadBalancerName'), 'tcpProbe')]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "loadBalancerName": {
      "type": "string",
       "value": "[variables('loadBalancerName')]"
    },
    "backendPoolId": {
      "type": "string",
      "value": "[variables('backendPoolId')]"
    },
    "frontEndIpId": {
      "type": "string",
      "value": "[variables('frontEndIpId')]"
    }
  }
}
